<div class="collection-info">
    <div class="info-section">
        <h2>Our Products</h2>
        <div class="category-grid">
            <% products.forEach(function(product) { %>
                <div class="category-card">
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="category-image">
                    <h3 style="margin: 15px 0;"><%= product.name %></h3>
                    <p style="color: #666; margin-bottom: 10px;"><%= product.price %></p>
                    <p style="margin-bottom: 15px;"><%= product.description %></p>
                    <form action="/cart/add" method="POST">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="newsletter-button" style="width: 100%;">Add to Bag</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>
</div>


    <style>
        body {
            font-family: 'Georgia', serif;
            background: #fff;
            color: #222;
            margin: 0;
            padding: 40px;
        }

    </style>